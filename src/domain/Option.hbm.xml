<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
                "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
                "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" > 
<hibernate-mapping>
	<class name="domain.Option" table="options">
		<id name="id" type="java.lang.Integer">
			<generator class="native"></generator>
		</id>
		<property name="key" type="java.lang.String" length="80" column="option_key"/>
		<property name="value" type="java.lang.String" length="800" column="option_value"></property>
	</class>
</hibernate-mapping>